<section class="presentation-container">
  <div class="overlay"></div>
  <div class="presentation-container__video">
    <video autoplay loop poster="black-ink.jpg" width="100%" height="100%">
      <source src="black-ink.webm"></source>
      <source src="black-ink-min.mp4"></source>
    </video>
  </div>
  <div class="wrapper">
    <div data-scroll-reveal="enter .5s and then ease-in" class="wrapper-center">
      <%= render 'layouts/img/awlka_logo' %>
      <p class="awlka-subtitle">Desenvolvimento Web</p>
    </div>
  </div>

  <div class="arrow-down">
    <a class="smoth-link" data-scroll-nav="0"><svg class="arrow-down__img" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" x="0px" y="0px" width="180px" height="107.5px" viewBox="0 0 180 107.5" enable-background="new 0 0 180 107.5" xml:space="preserve"><g><path fill="#0C0C0C" d="M39.215 19.98l51.953 54.102l51.953-54.102h18.066l-70.02 72.461L21.148 19.98H39.215z"/></g></svg></a>
  </div>
